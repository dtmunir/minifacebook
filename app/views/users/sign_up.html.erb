<h1>Sign up for an account on MiniFacebook</h1>

<%= form_for @user, :url => {:action => :create } do |f| %>
  <div>
    <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  </div>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>
  <div>
    <%= f.label :dob %>
    <%= f.text_field :dob %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>


  <%= f.submit %>
<% end %>
